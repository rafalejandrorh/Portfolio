---
import LinkInline from "./LinkInLine.astro";

interface Props {
    date: string,
    title: string, 
    company: string,
    imageCompany: string,
    description: string,
    link?: string,
    tags?
}

const { date, title, company, description, link, tags, imageCompany } = Astro.props;
---

<div
  class="relative mx-12 pb-12 grid before:absolute before:left-[-35px] before:block before:h-full before:border-l-2 before:border-black/20 dark:before:border-white/15 before:content-[''] md:grid-cols-5 md:gap-10 md:space-x-4]"
>
  <div class="relative pb-12 md:col-span-2">
      <div class="sticky top-0">
          <span class="text-green-300/100 -left-[74px] -top-[7px] absolute rounded-full text-6xl">&bull;</span>
          <h3 class="text-xl font-bold text-green-300/100">{title}</h3>
          <h4 class="font-semibold text-xl text-white-600 dark:text-white">{company}</h4>
          <time class="p-0 m-0 text-sm text-gray-200/80 dark:text-white/80">{date}</time>
          <img alt="" class="mt-4 items-start" loading="lazy" height="50" width="150" src={imageCompany} />
      </div>
  </div>

  <div class="relative flex flex-col gap-2 pb-4 text-gray-300 dark:text-gray-300 md:col-span-3 text-pretty">
    {description}
    
    {
      link && (
        <LinkInline href={link}>
            Saber m√°s{" "}
            <svg
              xmlns="http://www.w3.org/2000/svg"
              class="w-5 icon icon-tabler icon-tabler-chevron-right"
              width="24"
              height="24"
              viewBox="0 0 24 24"
              stroke-width="2"
              stroke="currentColor"
              fill="none"
              stroke-linecap="round"
              stroke-linejoin="round"
            >
              <>
                <path stroke="none" d="M0 0h24v24H0z" fill="none" />
                <path d="M9 6l6 6l-6 6" />
              </>
            </svg>
          </LinkInline>
      )
    }

    <div class="flex flex-wrap mb-2">
      {tags.map((tag) => ( 
          <span class={`flex rounded-full "rounded-full justify-center items-center gap-x-2 mt-2 ms-2 md:py-2 md:px-3 text-xd md:text-base border border-white/10 bg-white/5 hover:scale-110 hover:bg-white/10 transition py-1 px-2`}>
              <tag.icon class="size-4" />
              <p class="text-sm">{tag.name}</p>
          </span>
      ))}
    </div>
  </div>

</div>
